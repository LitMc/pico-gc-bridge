{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Debug",
      "description": "Debug build into ./build",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build into ./build-release",
      "binaryDir": "build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "displayName": "Debug Build",
      "configurePreset": "default",
      "jobs": 8
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "configurePreset": "release",
      "jobs": 8
    }
  ]
}
